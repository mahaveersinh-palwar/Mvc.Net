@model demo1.Models.Student

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

</head>
<style>
    /* Inline CSS for menu bar */
    .menu {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #333;
    }

        .menu li {
            float: left;
        }

            .menu li a {
                display: block;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

                .menu li a:hover {
                    background-color: #111;
                }
</style>
<body>
    <div>
        <ul class="menu">
            <li><a href="./Index">Home</a></li>
            <li><a href="./Aboutus">About Us</a></li>
            <li><a href="./Contact">Contact Us</a></li>
        </ul>
    </div>
    <div style="text-align: center; margin-top: 50px;">
        <form style="border: 2px solid #ccc; padding: 20px; width: 300px; margin: 0 auto;" action="./Contact" method="POST">
            <label for="number1" style="display: block; margin-bottom: 10px;">First Value:</label>
            <input type="number" id="fv" name="number1" style="width: 100%; padding: 8px; margin-bottom: 15px; box-sizing: border-box;" required>

            <label for="number2" style="display: block; margin-bottom: 10px;">Second Value:</label>
            <input type="number" id="sv" name="number2" style="width: 100%; padding: 8px; margin-bottom: 15px; box-sizing: border-box;" required>

            <input type="submit" value="Addition" name="operation" style="background-color: #4CAF50; color: white; padding: 10px 20px; border: none; cursor: pointer; width: 100%; box-sizing: border-box; margin-bottom: 10px;">

            <input type="submit" value="Subtraction"  name="operation" style="background-color: #4CAF50; color: white; padding: 10px 20px; border: none; cursor: pointer; width: 100%; box-sizing: border-box; margin-bottom: 10px;">

            <input type="submit" value="Multipication"  name="operation" style="background-color: #4CAF50; color: white; padding: 10px 20px; border: none; cursor: pointer; width: 100%; box-sizing: border-box; margin-bottom: 10px;">

            <input type="submit" value="Division"  name="operation" style="background-color: #4CAF50; color: white; padding: 10px 20px; border: none; cursor: pointer; width: 100%; box-sizing: border-box; margin-bottom: 10px;">
        </form>
    </div>
    @if (ViewBag.Result != null)
    {
      <div>
    <h3>Result:</h3>
    <p>@ViewBag.Result</p>
    </div>}

</body>
</html>
